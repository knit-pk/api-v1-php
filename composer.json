{
  "name": "knit-pk/api-v1-php",
  "description": "KNIT API PHP",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^7.1",
    "api-platform/api-pack": "^1.1",
    "friendsofsymfony/user-bundle": "^2.1.1",
    "gedmo/doctrine-extensions": "^2.4.32",
    "gesdinet/jwt-refresh-token-bundle": "^0.3",
    "easycorp/easyadmin-bundle": "^1.17",
    "guzzlehttp/guzzle": "^6.3",
    "lexik/jwt-authentication-bundle": "^2.4",
    "nelmio/cors-bundle": "^1.5",
    "predis/predis": "^1.1",
    "ramsey/uuid-doctrine": "^1.4",
    "symfony/flex": "^1.0",
    "symfony/framework-bundle": "^4",
    "symfony/monolog-bundle": "^3.1",
    "symfony/yaml": "^4",
    "vich/uploader-bundle": "^1.8",
    "webonyx/graphql-php": "^0.11.5"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "api-platform/schema-generator": "^2.0",
    "behat/behat": "^3.4",
    "behat/mink": "^1.7",
    "behat/mink-browserkit-driver": "^1.3",
    "behat/mink-extension": "^2.3",
    "behat/symfony2-extension": "^2.1",
    "behatch/contexts": "^3.0",
    "doctrine/doctrine-fixtures-bundle": "^3.0",
    "friendsofphp/php-cs-fixer": "^2.9",
    "phpstan/phpstan": "^0.9.1",
    "phpstan/phpstan-doctrine": "^0.9.1",
    "phpunit/phpunit": "^7",
    "symfony/console": "^4",
    "symfony/dotenv": "^4",
    "symfony/profiler-pack": "^1.0",
    "symfony/web-server-bundle": "^4"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/",
      "App\\Tests\\Feature\\": "features/bootstrap/"
    }
  },
  "scripts": {
    "test": [
      "phpstan analyze src -l 6 --ansi",
      "phpstan analyze features tests -l 5 --ansi",
      "php-cs-fixer fix -v --dry-run --diff --stop-on-violation --ansi",
      "phpunit --coverage-clover clover.xml --colors=always"
    ],
    "test-features": [
      "behat -n -vvv --colors"
    ],
    "fix": "php-cs-fixer fix -v --ansi",
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install --symlink --relative public": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*",
    "symfony/twig-bundle": "<3.3",
    "symfony/debug": "<3.3"
  },
  "extra": {
    "symfony": {
      "id": "01BT637NNPCSQR7VSBRRG0EEW4",
      "allow-contrib": true
    }
  }
}
